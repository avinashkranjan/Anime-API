# Server Configuration
PORT=3000

# Redis Caching Configuration
# Note: REDIS_MAX_MEMORY and REDIS_EVICTION_POLICY must be configured on your Redis server
# Example Redis server config: maxmemory 10gb, maxmemory-policy allkeys-lru
REDIS_ENABLED=false
REDIS_URL=redis://default:password@host:port
REDIS_MAX_RECONNECT_ATTEMPTS=50

# Node Cache Configuration (fallback when Redis is disabled)
NODE_CACHE_TTL=86400
NODE_CACHE_CHECK_PERIOD=600
NODE_CACHE_MAX_KEYS=1000
